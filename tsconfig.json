{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "strict": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "target": "es2016",
    "module": "commonjs",
    "skipLibCheck": true
  }
}
